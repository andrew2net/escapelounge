.col-md-6.col-xs-12
  = link_to game do
    .card
      .card-header{ style: "background-image: url(#{image_url(game.banner.url)})" }
        .card-header-content
          %h3.card-title= game.name
          %span
            %b= game.time_length
            minutes to complete
            %b= game.game_steps.count
            steps
            .float-right
              Difficulty:
              = game.difficulty
      .card-body
        %p
          Suitable for
          = game.grades.map { |g| g.name }.join ", "
        %p= game.short_description
