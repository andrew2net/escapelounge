.col-md-4.col-xs-12
  .card
    .game-allowed-indicator
      - if game.grades.select { |g| g.subscription_plans.select { |sp| sp.id == current_user.subscription_plan_id }.any? }.any?
        %i.fa.fa-check-circle
      - else
        %i.fa.fa-times-circle
    .card-header{ style: "background-image: url(#{image_url(game.banner.url)})" }
    .card-body
      = link_to game do
        %h4= game.name
        %p= game.short_description&.first(125)
        %ul
          %li
            %h6
              %i.fa.fa-clock
              Time
            %span= "#{game.time_length} min"
          %li
            %h6
              %i.fa.fa-th-list
              Steps
            %span= "#{game.game_steps.count} steps"
          %li
            %h6
              %i.fa.fa-star
              Difficulty
            %span= "#{game.difficulty}"
        %ul
          %li
            %h6
              %i.fa.fa-users
              Grade Level
            %span= game.grades.map { |g| g.name}.join ', '

