#games-list

  .page-head
    .container
      .row
        .col-md-10
          %h4 All Games
        .col-md-2

  %section
    .container

      %table.table.table-striped
        %thead
          %tr
            %th Name
            %th Description
            %th # of Steps
            %th Difficulty
            %th Age range
            %th Actions

        %tbody
          - @games.each do |game|
            %tr
              %td= game.name
              %td= game.description
              %td= game.game_steps.count
              %td= game.difficulty
              %td= game.age_range
              %td
                = link_to 'Show', game
                = link_to 'Edit', edit_game_path(game)
                = link_to 'Destroy', game, :method => :delete, :data => { :confirm => 'Are you sure?' }
