%section.container

  .row
    .col-md-6
      %h2 Games
    .col-md-6{style:"text-align:right"}
      = link_to 'New Game', new_game_path, class: "btn btn-primary"

  %br
  %br

  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Description
        %th # of Steps
        %th Difficulty
        %th Age range
        %th Actions
        
    %tbody
      - @games.each do |game|
        %tr
          %td= game.name
          %td= game.description
          %td= game.game_steps.count
          %td= game.difficulty
          %td= game.age_range
          %td
            = link_to 'Show', game
            = link_to 'Edit', edit_game_path(game)
            = link_to 'Destroy', game, :method => :delete, :data => { :confirm => 'Are you sure?' }