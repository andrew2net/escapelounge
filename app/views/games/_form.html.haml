= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :difficulty
    = f.number_field :difficulty
  .field
    = f.label :age_range
    = f.number_field :age_range
  .field
    = f.label :score
    = f.number_field :score
  .actions
    = f.submit 'Save'
