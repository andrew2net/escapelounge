#game-show
  .page-head
    .container
      .row
        .col-md-10
          %h4= @game.name
        .col-md-2
          = link_to 'Edit', edit_game_path(@game), class: "btn btn-sm btn-primary"

  %section
    .container

      %p#notice= notice

      %p
        %b Description:
        = @game.description
      %p
        %b Difficulty:
        = @game.difficulty
      %p
        %b Age range:
        = @game.age_range
      %p
        %b Score:
        = @game.score


      - @game.game_steps.each do |step|
        .step-container
          %h4= step.name
          %p= step.description
          %span.step-value= "#{step.value} pts"

          -# TODO: put hints into a button that triggers a modal and removes points from total score
          - step.hints.each do |hint|
            .hint-container
              %p= hint.description
              %span.hint-value= "#{hint.value} pts"
