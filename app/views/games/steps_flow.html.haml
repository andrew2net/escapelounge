#game-show
  .page-head
    .container
      .row
        .col-md-10
          %h4= @game.name

  %section
    .container
      .row
        .col-md-10

          %p#notice= notice

          %p
            %b Step name:
            = @step.name

          %p
            %b Step description:
            = @step.description

      .row
        .col-md-12
          = link_to 'Previous step', game_steps_flow_url(@game), class: 'btn btn-primary'
          = link_to 'Next step', game_steps_flow_url(@game), class: 'btn btn-primary pull-right'
