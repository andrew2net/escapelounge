.nested-fields
  .row
    .col-6
      .form-group
        = f.label :description, class: 'required'
        = f.text_area :description, class: 'form-control', rows: 8, required: true
      .form-group
        = f.label :value, class: 'required'
        = f.number_field :value, class: 'form-control', required: true
    .col-6
      .form-group
        = f.label :image
        = f.file_field :image
      = image_tag f.object.image.url :thumb

  = link_to_remove_association 'remove hint', f, class: 'btn btn-danger mb-3'
