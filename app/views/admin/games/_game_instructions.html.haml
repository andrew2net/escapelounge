%h1= game.name

%h2 Description

%p= game.description

%h2 Grade

%p= game.grades.map { |g| g.name }.join ', '

%h2 Difficulty

%p= game.difficulty

%h2 Instructions

%p= game.instructions

%h2 Steps
- game.game_steps.each do |step|
  %h3= step.name

  %p= step.description

  %h4 Solutions
  - step.game_step_solutions.each do |solution|
    %p= solution.solution

  %h4 Hints
  - step.hints.each do |hint|
    %p= hint.description
