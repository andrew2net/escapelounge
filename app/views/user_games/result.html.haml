#game-show
  .page-head
    .container
      .row
        .col-md-10
          %h4= @user_game.game.name

  %section
    = image_tag @user_game.game.background.url, class: 'img-fluid game-back-img'
    .container
      .row
        .col-md-12
          .progress.mb-4
            .progress-bar{ style: "width:#{@progress_pescent}" }
              = @progress_step

      .row
        .col-md-10

          %p#notice= notice

          %h2
            Result
            = @user_game.formated_result
