= content_for :title do
  = @user_game.game.name

#game-show{ style: "background-image: url(#{image_url(@user_game.game.background.url)})" }
  %section
    .container.pattern-bottom
      .game-step-subnav
        .progress.mb-4
          .progress-bar{ style: "width:#{@progress_pescent}" }
            = @progress_step

      .row
        .col-md-12

          %h2.mt-4
            Completed in: 
            = @user_game.formated_result

          = link_to 'Back To Game', game_path(@user_game.game)
