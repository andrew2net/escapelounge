= form_for @game_step do |f|
  - if @game_step.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game_step.errors.count, "error")} prohibited this game_step from being saved:"
      %ul
        - @game_step.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  -# .field
    = f.label :value
    = f.number_field :value
  .field
    = f.label :game_id
    = f.number_field :game_id
  .actions
    = f.submit 'Save'
